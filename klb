  <script>
    // ----------------------------
    // CUSTOMIZE
    // ----------------------------
    const CONFIG = {
      girlfriendName: "Jada",
      yourName: "Johnny",
      password: "mama", // lowercase compare
      // keep it short: 3 cute questions
      quiz: [
        { q: "first: what do i call you the most?", a: "baby", b: "my love", c: "mama", correct: "c" },
        { q: "second: our vibe tonight is‚Ä¶", a: "soft + romantic", b: "playful + spicy", c: "both", correct: "c" },
        { q: "last one: are you mine?", a: "yes", b: "obviously", c: "forever", correct: "c" }
      ]
    };

    // ----------------------------
    // DOM
    // ----------------------------
    const hearts = document.getElementById("hearts");
    const confettiRoot = document.getElementById("confetti");
    const toast = document.getElementById("toast");

    const photo = document.getElementById("photo");
    const capleft = document.getElementById("capleft");
    const capright = document.getElementById("capright");
    const chip = document.getElementById("chip");

    const stageA = document.getElementById("stageA");
    const stageB = document.getElementById("stageB");
    const stageC = document.getElementById("stageC");

    const pass = document.getElementById("pass");
    const go = document.getElementById("go");
    const s1 = document.getElementById("s1");

    const qText = document.getElementById("qText");
    const choices = document.getElementById("choices");
    const s2 = document.getElementById("s2");
    const skip = document.getElementById("skip");

    const bigQ = document.getElementById("bigQ");
    const p2 = document.getElementById("p2");
    const yes = document.getElementById("yes");
    const no = document.getElementById("no");
    const s3 = document.getElementById("s3");

    // ----------------------------
    // Helpers
    // ----------------------------
    function norm(x){ return String(x||"").trim().toLowerCase(); }

    function showToast(msg){
      toast.textContent = msg;
      toast.classList.add("show");
      setTimeout(()=>toast.classList.remove("show"), 2000);
    }

    function popConfetti(){
      const colors = ["#ff4d8d","#ff9cc4","#ffd38a","#ffffff","#9b7bff"];
      const pieces = 140;
      for(let i=0;i<pieces;i++){
        const el = document.createElement("div");
        el.className = "piece";
        el.style.left = (Math.random()*100) + "vw";
        el.style.background = colors[Math.floor(Math.random()*colors.length)];
        el.style.width = (8 + Math.random()*10) + "px";
        el.style.height = (10 + Math.random()*16) + "px";
        el.style.animationDuration = (2.6 + Math.random()*2.0) + "s";
        el.style.animationDelay = (Math.random()*0.15) + "s";
        confettiRoot.appendChild(el);
        setTimeout(()=>el.remove(), 5200);
      }
    }

    // floating hearts loop
    function spawnHeart(){
      const el = document.createElement("div");
      el.className = "h";
      el.style.left = (Math.random()*100) + "vw";
      el.style.animationDuration = (4.8 + Math.random()*3.6) + "s";
      el.style.opacity = (0.30 + Math.random()*0.55);
      const scale = 0.7 + Math.random()*1.35;
      el.style.transform = `rotate(-45deg) scale(${scale})`;
      hearts.appendChild(el);
      setTimeout(()=>el.remove(), 9000);
    }
    setInterval(spawnHeart, 420);
    for(let i=0;i<10;i++) setTimeout(spawnHeart, i*180);

    // polaroid develop
    photo.addEventListener("click", () => {
      photo.classList.add("ready");
      capright.textContent = "okay‚Ä¶ now continue";
      chip.textContent = "üíû unlocked vibes";
      showToast("cute, right? üòå");
    });

    // personalize
    capleft.textContent = `hey ${CONFIG.girlfriendName.toLowerCase()}‚Ä¶`;
    bigQ.textContent = `${CONFIG.girlfriendName.toLowerCase()}, will you be my valentine?`;
    p2.textContent = `birthday + valentine‚Ä¶ i‚Äôm lucky i get you. - ${CONFIG.yourName}`;

    // stage A: password
    function enter(){
      const guess = norm(pass.value);
      if(!guess){
        s1.textContent = "type something üòå";
        showToast("type the nickname");
        return;
      }
      if(guess !== norm(CONFIG.password)){
        s1.textContent = "mm‚Ä¶ close. try again üôà";
        showToast("try again");
        return;
      }
      s1.textContent = "";
      stageA.style.display = "none";
      stageB.style.display = "block";
      showToast("okay‚Ä¶ hi babe üíó");
      startQuiz();
    }

    go.addEventListener("click", enter);
    pass.addEventListener("keydown", (e) => { if(e.key==="Enter") enter(); });

    // stage B: quiz
    let qi = 0;

    function startQuiz(){
      qi = 0;
      renderQ();
    }

    function renderQ(){
      const item = CONFIG.quiz[qi];
      qText.textContent = item.q;

      choices.innerHTML = "";
      const opts = [
        {k:"a", t:item.a},
        {k:"b", t:item.b},
        {k:"c", t:item.c}
      ];

      opts.forEach(o => {
        const d = document.createElement("div");
        d.className = "choice";
        d.textContent = o.t;
        d.addEventListener("click", () => pick(o.k, d));
        choices.appendChild(d);
      });

      s2.textContent = "";
    }

    function pick(k, el){
      const item = CONFIG.quiz[qi];
      if(k === item.correct){
        el.classList.add("good");
        showToast("correct üòå");
        s2.textContent = "okayyy you know me üò≠üíó";
        setTimeout(() => {
          qi++;
          if(qi >= CONFIG.quiz.length){
            stageB.style.display = "none";
            stageC.style.display = "block";
            showToast("final question‚Ä¶");
          } else {
            renderQ();
          }
        }, 700);
      } else {
        showToast("nope üôà");
        s2.textContent = "nice try üò≠ pick again";
      }
    }

    skip.addEventListener("click", () => {
      stageB.style.display = "none";
      stageC.style.display = "block";
      showToast("okay okay‚Ä¶ straight to it");
    });

    // stage C: answer
    yes.addEventListener("click", () => {
      popConfetti();
      showToast("YESS üíó");
      s3.textContent = "screenshot this for me ü•πüíû";
      yes.disabled = true;
      no.disabled = true;
      chip.textContent = "üíñ she said yes";
      capright.textContent = "happy valentine‚Äôs day";
    });

    no.addEventListener("click", () => {
      showToast("try again üòå");
      s3.textContent = "mmm‚Ä¶ not accepted. tap yes when you‚Äôre ready üíó";
    });
  </script>
</body>
</html>
