<body>
  <div class="hearts" id="hearts"></div>
  <div class="confetti" id="confetti"></div>
  <div class="toast" id="toast"></div>

  <div class="wrap">
    <main class="panel">
      <div class="top">
        <div class="tag"><span class="dot"></span> for you</div>
        <div class="chip" id="chip">‚ú® a tiny surprise</div>
      </div>

      <div class="content">

        <section class="polaroid">
          <div class="photo" id="photo">
            <div class="develop"></div>
          </div>
          <div class="caption">
            <div class="capleft" id="capleft">hey beautiful‚Ä¶</div>
            <div class="capright" id="capright">tap to ‚Äúdevelop‚Äù</div>
          </div>
        </section>

        <div id="stageA">
          <h1 id="h1">one quick thing.</h1>
          <p id="p1">type the nickname you know i call you üòå</p>

          <div class="row">
            <div class="input">
              <input id="pass" type="text" autocomplete="off" placeholder="nickname" />
            </div>
            <button class="btn primary" id="go">enter</button>
          </div>

          <div class="status" id="s1"></div>
        </div>

        <div id="stageB" style="display:none;">
          <div class="mini">
            <div class="q" id="qText">tiny quiz üòá</div>
            <div class="choices" id="choices"></div>
            <div class="status" id="s2"></div>
          </div>

          <div class="center">
            <button class="btn ghost" id="skip">skip</button>
          </div>
        </div>

        <div id="stageC" style="display:none;">
          <h1 id="bigQ">will you be my valentine?</h1>
          <p id="p2">birthday + valentine‚Ä¶ i‚Äôm lucky i get you.</p>

          <div class="center">
            <button class="btn primary" id="yes">yes üíó</button>
            <button class="btn ghost" id="no">not today üôà</button>
          </div>

          <div class="status" id="s3"></div>
        </div>

